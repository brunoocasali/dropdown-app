<%= form_for(@account) do |f| %>
  <% if @account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @account.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :number %><br>
    <%= f.select :number, options_for_select(1..6) %>
  </div>

  <%= f.fields_for :installments do |fi| %>
    <b>Installment: </b> <%= "#{fi.options[:child_index] + 1} of #{@account.installments.size} " %>
    <div class="field">
      <%= fi.label :amount %><br>
      <%= fi.text_field :amount %>
    </div>
    <div class="field">
      <%= fi.label :number %><br>
      <%= fi.number_field :number %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
